<div class="container">
  <h2 class="main-title">Recent Articles</h2>
  <div class="row">
    <div class="slider-photo">
      <img src={{showModel.thumbImage}} alt="">
    </div>
    <div class="slider-content">
      <div class="content-title">
        {{showModel.title}}
      </div>
      <div class="content-date">
        <span class="date">{{date showModel.date}}</span>
      </div>
      <div class="slider-action">
        {{#link-to "articles.view" showModel.id}}Read More{{icon "arrow_forward" class="ml-2"}}{{/link-to}}
      </div>
    </div>
  </div>
</div>
