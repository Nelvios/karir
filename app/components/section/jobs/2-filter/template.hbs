<div class="container">
  <div class="row mb-0">

    <div class="input-field col s12 m4">
      {{#input/input-select value=specialization placeholder="Specialization"}}
        <option value="programmer">Programmer</option>
        <option value="network">Network</option>
        <option value="data">Data</option>
        <option value="infrastructure">IT Infrastructure</option>
      {{/input/input-select}}
    </div>

    <div class="input-field col s12 m4">
      {{#input/input-select value=location placeholder="Location"}}
        <option value="jabodetabek">Jabodetabek</option>
        <option value="surabaya">Surabaya</option>
        <option value="yogyakarta">Yogyakarta</option>
      {{/input/input-select}}
    </div>

    <div class="input-field col s12 m4">
      <button class="btn clear" {{action clear}}>Clear Filter{{icon "close" class="right"}}</button>
    </div>

  </div>
</div>
