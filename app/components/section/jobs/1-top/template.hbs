<div class="ornaments">
  <span class="ornament ornament-1"></span>
  <span class="ornament ornament-2"></span>
  <span class="ornament ornament-3 hide-on-small-only"></span>
</div>

<div class="container">
  <h2 class="title-format title">What's your passion?</h2>
  <div class="title-format sub-title">Find the job you deserve</div>

  <div class="row mb-0">

    <div class="input-field col s12 m4">
      {{!-- <select onchange={{action "selectSpecialization" value="target.value"}}> --}}
      {{#input/input-select value=specialization placeholder="Specialization"}}
      <option value="programmer">Programmer</option>
      <option value="network">Network</option>
      <option value="data">Data</option>
      <option value="infrastructure">IT Infrastructure</option>
      {{/input/input-select}}
      {{!-- </select> --}}
    </div>

    <div class="input-field col s12 m4">
      {{!-- <select onchange={{action "selectLocation" value="target.value"}}> --}}
      {{#input/input-select value=location placeholder="Location"}}
      <option value="jabodetabek">Jabodetabek</option>
      <option value="surabaya">Surabaya</option>
      <option value="yogyakarta">Yogyakarta</option>
      {{/input/input-select}}
      {{!-- </select> --}}
    </div>

    <div class="input-field col s12 m4">
      <button class="btn clear" {{action clear}}>Clear Filter{{icon "close" class="right"}}</button>
    </div>
  </div>
  {{!-- <p>{{icon "format_quote"}}Where there's a will, there's a way.{{icon "format_quote"}}</p> --}}
