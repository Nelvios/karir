<div class="container">
  <div class="row">
    {{#if this.result}}
      {{#each this.result as |filteredJob|}}
        <div class="col s6 l4">

          {{#link-to "jobs.detail" filteredJob.id class="job-item"}}

            <div class="image">
              <img src={{filteredJob.thumbJob}} alt="Job Image" class="responsive-img">
            </div>
            <div class="display">{{filteredJob.name}}</div>

          {{/link-to}}

        </div>
      {{/each}}
    {{else}}
      {{#if this.empty}}
        <div class="emptyJob">{{this.empty}}</div>
      {{else}}
        {{#each this.model as |job|}}
          <div class="col s6 l4">

            {{#link-to "jobs.detail" job.id class="job-item"}}

              <div class="image">
                <img src={{job.thumbJob}} alt="Job Image" class="responsive-img">
              </div>
              <div class="display">{{job.name}}</div>

            {{/link-to}}

          </div>
        {{/each}}
      {{/if}}
    {{/if}}
  </div>
</div>

