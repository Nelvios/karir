<div class="container">
  <h2 class="section-title">Think Post</h2>

  <div class="row clearfix">
    {{#each model.thoughts as |thought idx|}}

      <div class="col s12 m6 xl4 {{if (gte idx 3) "hide-on-small-only"}}">
        <div class="image">
          <img src={{thought.thumbThought}} alt="Photo" class="responsive-img">
        </div>

        <h5 class="display tooltip">{{thought.name}}</h5>
        <p>{{thought.thought}}</p>
      </div>

    {{/each}}
  </div>
</div>
