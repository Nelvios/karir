<div class="container">
  <h2 class="section-title center">Recent Articles</h2>

  <div class="row">
    {{#each articles as |article idx|}}
      <div class="col s12 m6">

        <div class="card">
          <div class="card-image">
            <img alt="img1" src="https://lorempixel.com/250/250/nature/{{sum idx}}">
            {{!-- <span class="card-title text-heading">Article Title {{sum idx}}</span> --}}
          </div>
          <div class="card-content">
            <p>
              <span class="date mb-2">{{date article.date}}</span>
              <span class="title">{{article.title}}</span>
            </p>
          </div>
          <div class="card-action">
            <a href="#">Read More{{icon "arrow_forward" class="ml-2"}}</a>
          </div>
        </div>

      </div>
    {{/each}}
  </div>
</div>
